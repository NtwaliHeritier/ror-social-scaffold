<h1>All Pending Invitations</h1>


<% @invitations.each do |invitation|%>
  <% if invitation.status%>
    <p> <%=invitation.invitor.name %>
    
    <%= form_for(invitation, url: user_friendships_path(invitation), method: 'POST') do |f| %>
        <%= hidden_field_tag 'invitor_id', invitation.invitor_id%>
        <%= f.submit "Accept" %>
        <%= f.submit "Decline" %>
    <%end%></p>
   <%end%> 
<%end%>

